function [weights] = perceptronConvergenceAlgorithm(input, output, weights, learningRate, steps)
    
[row, col] = size(input);

for i=1:steps 
    idx = mod(i,row) + 1
    disp('step')
    disp(i)
    disp('input')
    disp(input(idx,:));
    disp('expected output');
    disp(output(idx));
    
    disp('calculated output');
    y = sign( weights * input(idx,:).');
    disp(y);
    
    
    disp('current weights');
    disp(weights);
    weights = weights + learningRate*(output(idx) - y)*input(idx,:);
    disp('updated weights');
    disp(weights);
end
